<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zking.zkingedu.common.dao.SystemDao">
    <!--开启二级缓存-->
    <cache />
    <!--获取所有体系-->
    <select id="systems" resultType="System">
        select * from t_system where system_fid=#{systemFid} and system_state=0
    </select>

    <!--根据体系Id查询体系-->
    <select id="system" resultType="System">
        select * from t_system where system_id=#{systemID} and system_state=0
    </select>


    <!--获取所有体系（后台）-->
    <select id="sysList" resultType="System">
        select * from t_system
    </select>

</mapper>